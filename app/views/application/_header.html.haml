%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand Bookstore
      %a.shop-link.pull-right.visible-xs{href: root_path}
        %span.shop-icon
          %span.shop-quantity
    %a.shop-link.pull-right.hidden-xs{href: root_path}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            %a{href: root_path} Home
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} Shop
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                %a.collapse-link{href: books_path} Mobile development
              %li
                %a.collapse-link{href: books_path} Photo
              %li
                %a.collapse-link{href: books_path} Web design
          %li
            %a{href: "#"} My account
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            %a{href: root_path} Home
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} Shop
            %ul.dropdown-menu
              %li
                %a{href: books_path} Mobile development
              %li
                %a{href: books_path} Photo
              %li
                %a{href: books_path} Web design
              %li.divider{role: "separator"}
              %li
                %a{href: "#"} Log out
          %li
            %a{href: "#"} My account
